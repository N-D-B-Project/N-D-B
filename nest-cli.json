{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"language": "ts",
	"generateOptions": {
		"spec": false
	},
	"compilerOptions": {
		"deleteOutDir": true,
		"assets": [
			{
				"include": "**/Languages/*.json",
				"watchAssets": true,
				"outDir": "dist/src/common/Languages/"
			},
			{
				"include": "**/assets/**/*",
				"watchAssets": true,
				"outDir": "dist/src/common/assets"
			}
		]
	}
}
