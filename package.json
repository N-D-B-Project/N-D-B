{
	"name": "@n-d-b/n-d-b",
	"packageManager": "yarn@4.1.1",
	"private": true,
	"workspaces": {
		"packages": ["Packages/*"]
	},
	"author": {
		"name": "Miguel Alexandre Uhlein <NedcloarBR>",
		"email": "nedcloar1@hotmail.com",
		"url": "https://github.com/NedcloarBR/"
	},
	"scripts": {
		"update": "yarn upgrade-interactive",
		"postinstall": "husky install || true",
		"format": "yarn dlx @biomejs/biome format --write ./",
		"lint": "yarn dlx @biomejs/biome lint ./",
		"check": "yarn dlx @biomejs/biome check --apply ./",
		"test": "yarn workspaces foreach -A run test "
	},
	"devDependencies": {
		"@biomejs/biome": "^1.6.1",
		"@commitlint/cli": "^19.1.0",
		"@commitlint/config-angular": "^19.1.0",
		"@commitlint/config-conventional": "^19.1.0",
		"commitizen": "^4.3.0",
		"cross-env": "^7.0.3",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"typescript": "^5.4.2"
	}
}
